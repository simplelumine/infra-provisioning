{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": {{ xray_port_tcp }},
      "protocol": "vless",
      "settings": {
        "clients": [
          {% set all_clients = xray_clients + (xray_host_clients | default([])) %}
          {% for client in all_clients %}
          {
            "id": "{{ client.id }}",
            "flow": "xtls-rprx-vision"
          }{{ "," if not loop.last else "" }}
          {% endfor %}
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": false,
          "dest": "www.microsoft.com:443",
          "xver": 0,
          "serverNames": [ "www.microsoft.com" ],
          "privateKey": "{{ xray_private_key }}",
          "shortIds": [ "abcdef", "1a2b3c" ]
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct"
    }
  ]
}
